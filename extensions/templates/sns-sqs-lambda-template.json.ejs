{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    <% if (addPublishUser) { %>    
    "PublishUserName": {
      "Type": "String"
    },
    "PublishPassword": {
      "Type": "String"
      "NoEcho": true,
    }
    <% } %>
  },    
  "Resources": {
    <% if (addSnsSubscription) { %>   
    {
      "<%= snsConsumerName %>Queue": {
        "Type" : "AWS::SQS::Queue",
        "Properties": {
          "QueueName": "<%= snsConsumerName %>Queue"
        }  
      }
    },
    {
      "Type" : "AWS::SNS::Subscription",
      "Properties" : {
          "Protocol" : "sqs",
          "Endpoint": {
            "Fn::GetAtt": ["<%= snsConsumerName %>", "Arn"]
          },
          "TopicArn" : "<%= snsTopicArn %>"
        }
    },
    "<%= snsConsumerName %>Policy": {
      "Type": "AWS::SQS::QueuePolicy",
      "Properties": {
        "PolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "sns.amazonaws.com"
              },
              "Action": ["sqs:SendMessage"],
              "Resource": "*",
              "Condition": {
                "ArnEquals": {
                  "aws:SourceArn": "<%= snsTopicArn %>"
                }
              }
            }
          ]
        },       
    <% }; %>   
    <% if (addSnsProducer) { %>     
      {
        "<%= snsProducerName %>Queue": {
          "Type" : "AWS::SQS::Queue",
          "Properties": {
            "QueueName": "<%= snsProducerName %>Queue"
          }  
        }
      },  
      {
        "Type" : "AWS::SNS::Subscription",
        "Properties" : {
            "Protocol" : "sqs",
            "Endpoint": {
              "Fn::GetAtt": ["<%= snsProducerName %>", "Arn"]
            },
            "TopicArn" : "<%= topicArn %>"
          }
      },
      "<%= snsProducerName %>Policy": {
        "Type": "AWS::SQS::QueuePolicy",
        "Properties": {
          "PolicyDocument": {
            "Statement": [
              {
                "Effect": "Allow",
                "Principal": {
                  "Service": "sns.amazonaws.com"
                },
                "Action": ["sqs:SendMessage"],
                "Resource": "*",
                "Condition": {
                  "ArnEquals": {
                    "aws:SourceArn": "<%= snsTopicArn %>"
                  }
                }
              }
            ]
          },       
      <% }; %>   
      "<%= snsTopicName %>": {
      "Type": "AWS::SNS::Topic",
      "Properties": {
        "Subscription": [
          {
            "Endpoint": {
              "Fn::GetAtt": ["<%= snsConsumerName %>", "Arn"]
            },
            "Protocol": "sqs"
          },
          {
            "Endpoint": {
              "Fn::GetAtt": ["<%= snsProducerName %>", "Arn"]
            },
            "Protocol": "sqs"
          }
        ]
      }
    },
    "<%= snsConsumerName %>": {
      "Type": "AWS::SQS::Queue"
    },
    "<%= snsProducerName %>": {
      "Type": "AWS::SQS::Queue"
    },
    <% if (addPublishUserPolicy) { %>
    <% if (addPublishUser) { %>
    "MyPublishUser": {
      "Type": "AWS::IAM::User",
      "Properties": {
        "UserName": {
          "Ref" : "PublishUserName"
        },
        "LoginProfile": {
          "Password": {
            "Ref": "PublishPassword"
          },
          "PasswordResetRequired": true          
        }
      }
    },
    "MyPublishUserKey": {
      "Type": "AWS::IAM::AccessKey",
      "Properties": {
        "UserName": {
          "Ref": "MyPublishUser"
        }
      }
    },
    <% } %>
    <% if (addConsumeSQSUserRole) { %>    
      "<%= sqsConsumeRoleName %>": {
        "Type" : "AWS::IAM::Role",
        "Properties" : {
          "AssumeRolePolicyDocument": {
            "Version": "2012-10-17",
            "Statement": [
              {
                "Effect": "Allow",
                "Principal": { 
                  "AWS": "arn:aws:iam::${AWS::AccountId}:role/*" 
                }
                },
                "Action": [
                  "sts:AssumeRole"
                ]
              }
            ]
          },          
          "Description" : "SQS consumer role",
          "Policies" : [ 
            {
              "PolicyName": "<%= snsTopicName %>ConsumeIAMRolePolicy",
              "PolicyDocument": {
                "Statement": [
                  {
                    "Effect": "Allow",
                    "Action": [
                      <% if (consumerCanDelete) { %>
                      "sqs:DeleteMessage", 
                      <% } >
                      "sqs:ReceiveMessage"
                    ],
                    "Resource": [
                      {
                        "Fn::GetAtt": ["<%= snsConsumerName %>", "Arn"]
                      },
                      {
                        "Fn::GetAtt": ["<%= snsProducerName %>", "Arn"]
                      }
                    ]
                  }
                ]
              }
            }        
          ],
          "RoleName" : "<%= sqsConsumeRoleName %>",
          "Tags" : [ 
            "SQS",
            "Consumer" 
          ]
        }
      },
      <% } %>    
    <% if (addPublishSnsUserRole) { %>    
    "SNSPublishRole": {
      "Type" : "AWS::IAM::Role",
      "Properties" : {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": { 
                "AWS": "arn:aws:iam::<%= accountID %>:role/<%= roleName %>" 
              }
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },          
        "Description" : "SNS publish role",
        "Policies" : [ 
          {
            "PolicyName": "<%= snsTopicName %>PublishIAMRolePolicy",
            "PolicyDocument": {
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": ["sns:Publish"],
                  "Resource": {
                    "Ref": "<%= snsTopicName %>"
                  }
                }
              ]
            }
          }        
        ],
        "RoleName" : "SNSPublishRole",
        "Tags" : [ 
          "SNS",
          "Publish" 
        ]
      }
    },
    <% } %>
    <% if (addPublishGroupPolicy) { %>
    "MyPublishTopicGroup": {
      "Type": "AWS::IAM::Group",
      "Properties": {
        "Policies": [
          {
            "PolicyName": "<%= snsTopicName %>GroupPolicy",
            "PolicyDocument": {
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": ["sns:Publish"],
                  "Resource": {
                    "Ref": "<%= snsTopicName %>"
                  }
                }
              ]
            }
          }
        ]
      }
    },
    "AddUserToMyPublishTopicGroup": {
      "Type": "AWS::IAM::UserToGroupAddition",
      "Properties": {
        "GroupName": {
          "Ref": "MyPublishTopicGroup"
        },
        "Users": [
          <% if (addPublishUser) { %>
          {
            "Ref": "MyPublishUser"
          }
          <% } %>
        ]
      }
    },
    <% } %>
    <% } %>
    <% if (addConsumerUserPolicy) { %>
    <% if (addConsumerUser) { %>  
    "MyQueueUser": {
      "Type": "AWS::IAM::User",
      "Properties": {
        "LoginProfile": {
        }
      }
    },
    "MyQueueUserKey": {
      "Type": "AWS::IAM::AccessKey",
      "Properties": {
        "UserName": {
          "Ref": "MyQueueUser"
        }
      }
    },
    <% } %>
    <% if (addConsumerGroupPolicy) { %>
    "MyRDMessageQueueGroup": {
      "Type": "AWS::IAM::Group",
      "Properties": {
        "Policies": [
          {
            "PolicyName": "MyQueueGroupPolicy",
            "PolicyDocument": {
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": ["sqs:DeleteMessage", "sqs:ReceiveMessage"],
                  "Resource": [
                    {
                      "Fn::GetAtt": ["<%= snsConsumerName %>", "Arn"]
                    },
                    {
                      "Fn::GetAtt": ["<%= snsProducerName %>", "Arn"]
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    },
    "AddUserTo<%= snsConsumerName %>Group": {
      "Type": "AWS::IAM::UserToGroupAddition",
      "Properties": {
        "GroupName": {
          "Ref": "MyRDMessageQueueGroup"
        },
        "Users": [
          <% if (addConsumerUser) { %>
          {
            "Ref": "<%= snsConsumerName %>User"
          }
          <% } %>
        ]
      }
    },
    "<%= snsConsumerName %>Policy": {
      "Type": "AWS::SQS::QueuePolicy",
      "Properties": {
        "PolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "sns.amazonaws.com"
              },
              "Action": ["sqs:ReceiveMessage"],
              "Resource": "*",
              "Condition": {
                "ArnEquals": {
                  "aws:SourceArn": {
                    "Ref": "<%= snsTopicName %>"
                  }
                }
              }
            }
          ]
        },
        "Queues": [
          {
            "Ref": "<%= snsConsumerName %>"
          },
          {
            "Ref": "<%= snsProducerName %>"
          }
        ]
      }
    },
    <% } %>
    <% } %>  
    <% if (addConsumerLambda) { %>      
    "LambdaExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": ["lambda.amazonaws.com"]
              },
              "Action": ["sts:AssumeRole"]
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "allowLambdaLogs",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": ["logs:*"],
                  "Resource": "arn:aws:logs:*:*:*"
                }
              ]
            }
          },
          {
            "PolicyName": "allowSqs",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "sqs:ReceiveMessage",
                    "sqs:DeleteMessage",
                    "sqs:GetQueueAttributes",
                    "sqs:ChangeMessageVisibility"
                  ],
                  "Resource": {
                    "Fn::GetAtt": ["<%= snsConsumerName %>", "Arn"]
                  }
                }
              ]
            }
          }
        ]
      }
    },
    "<= lambdaName %>": {
      "Type": "AWS::Lambda::Function",
      "Metadata": {
        "aws:asset:path": "./src",
        "aws:asset:property": "Code"
      },
      "Properties": {
        "Handler": "index.handler",
        "Role": {
          "Fn::GetAtt": ["LambdaExecutionRole", "Arn"]
        },
        "Runtime": "<%= runtime %>",
        "Timeout": <%= timeout %>,
        "MemorySize": 512
      }
    },
    "LambdaFunctionEventSourceMapping": {
      "Type": "AWS::Lambda::EventSourceMapping",
      "Properties": {
        "BatchSize": 10,
        "Enabled": true,
        "EventSourceArn": {
          "Fn::GetAtt": ["<%= snsConsumerName %>", "Arn"]
        },
        "FunctionName": {
          "Fn::GetAtt": ["<%= lambdaName %>", "Arn"]
        }
      }
    }
    <% } %>  
  }  
}
